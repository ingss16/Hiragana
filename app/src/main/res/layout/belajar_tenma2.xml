<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/ba_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ba_t" />

        <ImageButton
            android:id="@+id/bi_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bi_t" />

        <ImageButton
            android:id="@+id/bu_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bu_t" />

        <ImageButton
            android:id="@+id/be_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/be_t" />

        <ImageButton
            android:id="@+id/bo_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bo_t" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/pa_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pa_t" />

        <ImageButton
            android:id="@+id/pi_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pi_t" />

        <ImageButton
            android:id="@+id/pu_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pu_t" />

        <ImageButton
            android:id="@+id/pe_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pe_t" />

        <ImageButton
            android:id="@+id/po_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/po_t" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgTulis"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:padding="15dp"
        android:src="@drawable/baj" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTulis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Ba"
            android:textColor="#160E06"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnSuara"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bt_play" />

    </LinearLayout>
</LinearLayout>