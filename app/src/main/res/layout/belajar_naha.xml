<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/na_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/na_t" />

        <ImageButton
            android:id="@+id/ni_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ni_t" />

        <ImageButton
            android:id="@+id/nu_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nu_t" />

        <ImageButton
            android:id="@+id/ne_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ne_t" />

        <ImageButton
            android:id="@+id/no_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_t" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/ha_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ha_t" />

        <ImageButton
            android:id="@+id/hi_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hi_t" />

        <ImageButton
            android:id="@+id/fu_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fu_t" />

        <ImageButton
            android:id="@+id/he_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/he_t" />

        <ImageButton
            android:id="@+id/ho_t"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ho_t" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgTulis"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/naj"
        android:padding="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTulis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Na"
            android:textColor="#160E06"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnSuara"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@null"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bt_play" />

    </LinearLayout>
</LinearLayout>